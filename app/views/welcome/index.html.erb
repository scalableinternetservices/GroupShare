<div class="wrap container-fluid">
  <div class="fleft">
    <%= render 'streams/allstreams' %>
  </div>

  <div class="fright text-center">
    <h5>Start a new stream by filling out the information below:</h5>

    <div class="row col-md-6 col-md-offset-3">

      <%= form_for :stream, url: streams_path, class: "form-group" do |f| %>

          <div class="form-group">
            <%= f.text_field :owner, placeholder: "Your name", required: true, class: "form-control", autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.text_field :title, placeholder: "Topic", required: true, class: "form-control", autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.text_area :description, placeholder: "What is the stream about?", class: "form-control", autocomplete: "off", rows: "3" %>
          </div>

          <div class="form-group">
            <%= f.label :expire_in %>
            <%= f.select :expire, ["10 minutes", "1 hour", "1 day", "1 week", "2 weeks", "1 month"], class: "form-control" %>
          </div>

          <!--
    <%= f.text_field :expire_minutes, placeholder: "Minutes" %>
    <br>

    <%= f.text_field :pin, placeholder: "Pin" %>
    <br>

    <%= f.check_box :is_private %> private
    <br>
    -->
          <div class="form-group">
            <%= submit_tag "Start", class: "btn btn-primary" %>
          </div>

      <% end %>
    </div>


    <p>Search</p>

    <%= form_for :streams, url: streams_search_path, method: 'get', class: 'form-group' do |f2| %>

        <div class="form-group">
          <%= f2.text_field :q, placeholder: 'Search Here', required: true, class: 'form-control' %>
        </div>

        <%= submit_tag 'Search', class: 'btn btn-default' %>
    <% end %>



  </div>

</div>

<div style="clear:both"></div>